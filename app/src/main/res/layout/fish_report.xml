<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" דיווחים חיים- דג שנתפס"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="סוג הדייג:"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/FishingStyleArray"
        android:layout_row="0"
        android:layout_column="23"
        android:layout_weight="1"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="סוג הדג(אם ידוע):"
        android:id="@+id/textView7"
        android:layout_below="@+id/spinner"
        android:layout_alignEnd="@+id/textView8" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="איפה נתפס הדג?"
        android:id="@+id/textView6"
        android:layout_above="@+id/checkBox"
        android:layout_alignStart="@+id/textView7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="השתמש במיקום הנוכחי שלי"
        android:id="@+id/checkBox"
        android:layout_below="@+id/editText2"
        android:layout_alignEnd="@+id/textView6" />


    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="העלה תמונה:"
        android:id="@+id/textView5"
        android:layout_below="@+id/checkBox"
        android:layout_alignEnd="@+id/textView7" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שלח"
        android:id="@+id/bon3"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="פרטים נוספים:"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/checkBox"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
